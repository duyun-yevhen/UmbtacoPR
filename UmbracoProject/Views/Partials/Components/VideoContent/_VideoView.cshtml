@using Umbraco.Cms.Core.Services
@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Core.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<VideoContent>

<div class="container shadow p-3">
	<div class="row">
		<div class="col-md-8 mt-md-0 mt-3">
			<iframe style="display:inline-block; float:left" align="top" width="640" height="360" src="@Model.VideoUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
		</div>

		<div class="col-md-4 mb-md-0 mb-4">
			<div class="h5">
				@Model.Title
			</div>
			@Model.VideoDescription
		</div>
	</div>
</div>